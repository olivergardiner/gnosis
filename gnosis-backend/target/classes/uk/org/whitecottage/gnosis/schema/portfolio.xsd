<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xs:include schemaLocation="common.xsd"/>
	<xs:element name="portfolio">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="portfolioStructure"/>
				<xs:element ref="projects"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="portfolioStructure">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="portfolioDomain" maxOccurs="unbounded"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="projects">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="project" minOccurs="0" maxOccurs="unbounded"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="portfolioDomain">
		<xs:complexType>
			<xs:attribute ref="name" use="required"/>
			<xs:attribute name="domain-id" type="xs:NMTOKEN" use="required"/>
			<xs:attribute name="owner" type="xs:string"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="project">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="description" minOccurs="0"/>
				<xs:element ref="alignedPrinciple" minOccurs="0" maxOccurs="unbounded"/>
				<xs:element ref="businessDriver" minOccurs="0" maxOccurs="unbounded"/>
				<xs:element ref="lifecycle" minOccurs="0"/>
				<xs:element ref="dependencies" minOccurs="0"/>
				<xs:element ref="enterpriseDebt" minOccurs="0" maxOccurs="unbounded"/>
			</xs:sequence>
			<xs:attribute ref="name" use="required"/>
			<xs:attribute name="project-id" type="xs:NMTOKEN" use="required"/>
			<xs:attribute name="domain"/>
			<xs:attribute name="complexity"/>
			<xs:attribute name="delivered-by"/>
			<xs:attribute name="project-type"/>
			<xs:attribute name="parent-project"/>
			<xs:attribute name="start" type="xs:date"/>
			<xs:attribute name="end" type="xs:date"/>
			<xs:attribute name="owner"/>
			<xs:attribute name="manager"/>
			<xs:attribute name="status" type="xs:token"/>
			<xs:attribute name="portfolio-id" type="xs:token"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="alignedPrinciple">
		<xs:complexType>
			<xs:attribute name="principle" type="xs:NMTOKEN" use="required"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="businessDriver">
		<xs:complexType>
			<xs:attribute name="driver" type="xs:NMTOKEN" use="required"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="enterpriseDebt">
		<xs:complexType mixed="true">
			<xs:attribute name="title" use="required"/>
			<xs:attribute name="status" use="required"/>
			<xs:attribute name="debt-class"/>
			<xs:attribute name="cost-to-fix"/>
			<xs:attribute name="effort-to-fix" type="xs:string"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="lifecycle">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="stage" minOccurs="0" maxOccurs="unbounded"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="stage">
		<xs:complexType>
			<xs:attribute name="lifecycle" use="required"/>
			<xs:attribute ref="date" use="required"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="dependency">
		<xs:complexType mixed="true">
			<xs:attribute name="project" use="required"/>
			<xs:attribute name="strength"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="dependencies">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="dependency" minOccurs="0" maxOccurs="unbounded"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>
