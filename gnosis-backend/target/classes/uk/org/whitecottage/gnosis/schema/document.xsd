<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xs:element name="context">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="subject" type="xs:string"/>
				<xs:element name="introduction" type="paragraphType"/>
				<xs:element name="audience" type="paragraphType" minOccurs="0"/>
				<xs:element name="scope" type="xs:string"/>
				<xs:element name="keywords" type="xs:string"/>
				<xs:element ref="glossary" minOccurs="0"/>
				<xs:element ref="references" minOccurs="0"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="control">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="ApprovalDate" type="xs:date"/>
				<xs:element name="ApprovalStatus" type="xs:string"/>
				<xs:element name="Approver">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="Person" type="xs:string"/>
							<xs:element name="Role" type="xs:string"/>
						</xs:sequence>
					</xs:complexType>
				</xs:element>
				<xs:element name="Contact" type="xs:string"/>
				<xs:element name="Version" minOccurs="0" maxOccurs="unbounded">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="Author" type="xs:string"/>
							<xs:element name="Date" type="xs:date"/>
							<xs:element name="Status" type="xs:string"/>
						</xs:sequence>
						<xs:attribute name="version" type="xs:string" use="required"/>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
			<xs:attribute name="currentVersion" type="xs:string" use="required"/>
		</xs:complexType>
	</xs:element>
	<xs:element name="raci">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="role" maxOccurs="unbounded">
					<xs:complexType>
						<xs:simpleContent>
							<xs:extension base="xs:string">
								<xs:attribute name="id" type="xs:string" use="required"/>
							</xs:extension>
						</xs:simpleContent>
					</xs:complexType>
				</xs:element>
				<xs:element name="action" maxOccurs="unbounded">
					<xs:complexType>
						<xs:simpleContent>
							<xs:extension base="xs:string">
								<xs:attribute name="id" type="xs:string" use="required"/>
							</xs:extension>
						</xs:simpleContent>
					</xs:complexType>
				</xs:element>
				<xs:element name="mapping" maxOccurs="unbounded">
					<xs:complexType>
						<xs:attribute name="roleId" type="xs:string" use="required"/>
						<xs:attribute name="actionId" type="xs:string" use="required"/>
						<xs:attribute name="raci" type="xs:string" use="required"/>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="glossary">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="term" minOccurs="0" maxOccurs="unbounded">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="name" type="xs:string"/>
							<xs:element name="definition" type="xs:string"/>
						</xs:sequence>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="references">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="reference" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:complexType name="paragraphType">
		<xs:choice minOccurs="0" maxOccurs="unbounded">
			<xs:element name="p" type="styledTextType"/>
			<xs:element name="ul">
				<xs:complexType>
					<xs:sequence>
						<xs:element name="li" type="styledTextType" minOccurs="0" maxOccurs="unbounded"/>
					</xs:sequence>
				</xs:complexType>
			</xs:element>
		</xs:choice>
	</xs:complexType>
	<xs:complexType name="styledTextType" mixed="true">
		<xs:choice maxOccurs="unbounded">
			<xs:element name="b" type="styledTextType"/>
			<xs:element name="i" type="styledTextType"/>
			<xs:element name="u" type="styledTextType"/>
			<xs:element name="ref">
				<xs:complexType>
					<xs:attribute name="id" type="xs:string"/>
				</xs:complexType>
			</xs:element>
		</xs:choice>
	</xs:complexType>
</xs:schema>
