<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xs:include schemaLocation="common.xsd"/>
	<xs:element name="taxonomies">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="taxonomy" minOccurs="0" maxOccurs="unbounded"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="taxonomy">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="description" minOccurs="0" maxOccurs="1"/>
				<xs:element ref="term" minOccurs="0" maxOccurs="unbounded"/>
			</xs:sequence>
			<xs:attribute name="taxonomy-id" use="required"/>
			<xs:attribute ref="name" use="required"/>
			<xs:attribute name="type"/>
		</xs:complexType>
	</xs:element>	
	<xs:element name="term">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="description" minOccurs="0" maxOccurs="1"/>
				<xs:element ref="term" minOccurs="0" maxOccurs="unbounded"/>
			</xs:sequence>
			<xs:attribute name="term-id" use="required"/>
			<xs:attribute ref="name" use="required"/>
		</xs:complexType>
	</xs:element>	
</xs:schema>
